<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTonyStark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/tony_stark_new"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Strak"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:layout_below="@+id/txtName"
                android:textColor="#212121"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+01 567325"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:textColor="#212121"
                android:layout_below="@+id/txtEmail"
                android:layout_marginTop="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSteveRogers"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/captain_america"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtNameSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steve Rogers"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgSteveRogers"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txtEmailSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="steve@rogers.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgSteveRogers"
                android:layout_below="@+id/txtNameSteve"
                android:textColor="#212121"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtPhoneNumberSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+01 838197"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgSteveRogers"
                android:textColor="#212121"
                android:layout_below="@+id/txtEmailSteve"
                android:layout_marginTop="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgThorOdinson"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/thor"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtNameThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor Odinson"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgThorOdinson"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txtEmailThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thor@odinson.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgThorOdinson"
                android:layout_below="@+id/txtNameThor"
                android:textColor="#212121"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtPhoneNumberThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+01 4444555"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgThorOdinson"
                android:textColor="#212121"
                android:layout_below="@+id/txtEmailThor"
                android:layout_marginTop="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBruce"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/hulk"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtNameBruce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Bruce Banner"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgBruce"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txtEmailBruce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="drbruce@baneer.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgBruce"
                android:layout_below="@+id/txtNameBruce"
                android:textColor="#212121"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtPhoneNumberBruce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+01 384829"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgBruce"
                android:textColor="#212121"
                android:layout_below="@+id/txtEmailBruce"
                android:layout_marginTop="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTChalla"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/black_panther"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtNameTChalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T Challa"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTChalla"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txtEmailTChalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="t@challa.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTChalla"
                android:layout_below="@+id/txtNameTChalla"
                android:textColor="#212121"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtPhoneNumberTChalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+01 838197"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTChalla"
                android:textColor="#212121"
                android:layout_below="@+id/txtEmailTChalla"
                android:layout_marginTop="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgNatasha"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/widow"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtNameNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Natasha Romanova"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgNatasha"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txtEmailNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="natasha@romanova.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgNatasha"
                android:layout_below="@+id/txtNameNatasha"
                android:textColor="#212121"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtPhoneNumberNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+01 975345"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgNatasha"
                android:textColor="#212121"
                android:layout_below="@+id/txtEmailNatasha"
                android:layout_marginTop="15dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>